PORT=5000
# Primary Mongo key (app also accepts MONGODB_URL, MONGO_URI, MONGO_URL, DATABASE_URL, DATABASE_URI, DB_URI, DB_URL)
MONGODB_URI=mongodb://localhost:27017/truckflow
NODE_ENV=development

# Frontend URL for CORS and WebSocket
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_access_token_secret_here_change_this_in_production
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_refresh_token_secret_here_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Gmail SMTP)
# Get App Password from: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
